.bg-gradient{min-height:100vh;width:100vw;background:linear-gradient(135deg,#667eea,#764ba2)}.content{display:flex;flex-direction:column;align-items:center;justify-content:center;min-height:100vh;padding:80rpx 0 40rpx;box-sizing:border-box}.company-info{display:flex;flex-direction:column;align-items:center;margin-bottom:50rpx}.logo{width:200rpx;height:200rpx;margin-bottom:15rpx;box-shadow:0 15rpx 50rpx rgba(102,126,234,.3);border-radius:50%;background:#fff;border:8rpx solid hsla(0,0%,100%,.2)}.company-name{font-size:52rpx;color:#fff;font-weight:900;letter-spacing:8rpx;margin-bottom:15rpx;text-align:center;position:relative;z-index:2;text-shadow:0 4rpx 8rpx rgba(0,0,0,.2)}.highlight-company{text-shadow:0 4rpx 8rpx rgba(0,0,0,.2);padding:20rpx 30rpx;border-radius:25rpx;background:hsla(0,0%,100%,.15);-webkit-backdrop-filter:blur(10rpx);backdrop-filter:blur(10rpx);display:inline-block;border:2rpx solid hsla(0,0%,100%,.2)}.login-container{width:85%;padding:60rpx 40rpx 50rpx 40rpx;background:hsla(0,0%,100%,.95);border-radius:35rpx;box-shadow:0 20rpx 60rpx rgba(102,126,234,.2);-webkit-backdrop-filter:blur(20rpx);backdrop-filter:blur(20rpx);border:2rpx solid hsla(0,0%,100%,.3)}.login-title{font-size:42rpx;font-weight:700;text-align:center;margin-bottom:40rpx;color:#667eea;letter-spacing:3rpx;text-shadow:0 2rpx 4rpx rgba(102,126,234,.1)}.input-group{margin-bottom:40rpx;width:100%}.input-icon-group{display:flex;align-items:center;margin-bottom:25rpx;position:relative}.input-icon{position:absolute;left:30rpx;top:50%;-webkit-transform:translateY(-50%);transform:translateY(-50%);font-size:32rpx;z-index:2;-webkit-filter:drop-shadow(0 2rpx 4rpx rgba(0,0,0,.1));filter:drop-shadow(0 2rpx 4rpx rgba(0,0,0,.1))}.input-item{width:100%;height:100rpx;border:2rpx solid rgba(102,126,234,.2);border-radius:50rpx;padding:0 30rpx 0 80rpx;box-sizing:border-box;font-size:30rpx;background:hsla(0,0%,100%,.8);color:#333;transition:all .3s ease;-webkit-backdrop-filter:blur(10rpx);backdrop-filter:blur(10rpx)}.input-item:focus{border:2rpx solid #667eea;background:hsla(0,0%,100%,.95);box-shadow:0 8rpx 25rpx rgba(102,126,234,.15);-webkit-transform:translateY(-2rpx);transform:translateY(-2rpx)}.password-input{position:relative;width:100%}.password-toggle{position:absolute;right:25rpx;top:50%;-webkit-transform:translateY(-50%);transform:translateY(-50%);font-size:28rpx;color:#667eea;z-index:3;background:hsla(0,0%,100%,.9);padding:10rpx 15rpx;border-radius:25rpx;cursor:pointer;transition:all .3s ease;box-shadow:0 4rpx 15rpx rgba(102,126,234,.1)}.password-toggle:active{-webkit-transform:translateY(-50%) scale(.95);transform:translateY(-50%) scale(.95)}.password-input .input-item{padding-right:100rpx}.login-btn{margin-top:30rpx;height:100rpx;background:linear-gradient(135deg,#8172f5,#667eea);color:#fff;border:none;border-radius:50rpx;font-size:32rpx;font-weight:700;letter-spacing:4rpx;display:flex;justify-content:center;align-items:center;box-shadow:0 10rpx 30rpx rgba(102,126,234,.3);transition:all .3s ease}.login-btn:active{-webkit-transform:translateY(2px);transform:translateY(2px);box-shadow:0 5rpx 15rpx rgba(102,126,234,.4)}.footer{margin-top:50rpx}.copyright{font-size:26rpx;color:hsla(0,0%,100%,.8);text-shadow:0 2rpx 8rpx rgba(0,0,0,.1)}