}
.back-btn.data-v-5294d07a {
  display: flex;
  align-items: center;
  color: white;
}
.back-icon.data-v-5294d07a {
  font-size: 40rpx;
  margin-right: 10rpx;
}
.back-text.data-v-5294d07a {
